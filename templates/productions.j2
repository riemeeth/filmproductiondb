{% extends "nav_footer.j2" %}

{% block content %}

<div class="container">
<legend class="d-flex float-none w-auto p-2 justify-content-center">Productions</legend>
    <table class="table">
        <thead class="align-center text-center">
            <tr>
                {% for key in productions[0].keys() %}
                    <th>{{key}}</th>
                {% endfor %}
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        <tbody>
            {% for production in productions %}
                <tr class="align-middle text-center">
                    {% for val in production.keys() %}
                        <td>{{production[val]}}</td>
                    {% endfor %}
                    <td>
                        <a href="/productions/edit/{{ production[ 'ID' ]}}"><button type="submit" class="btn btn-info">Edit</button></a>
                    </td>
                    <td>
                        <a href="/productions/delete/{{ production[ 'ID' ]}}"><button type="submit" class="btn btn-danger">Delete</button></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </tables>
</div>

<form class="container" style="max-width:35vw" action="" method="POST">
