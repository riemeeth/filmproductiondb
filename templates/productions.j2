    <div class= "row g-3">
    <div class= "row">
        <div class="col-md-6">
            <label for="inputProductionName" class="form-label">Production Name</label>
            <input type="text" class="form-control" id="inputProductionName" name="inputProductionName" required>
        </div>
        <div class="col-md-6">
            <label for="inputStudioID" class="form-label">Studio Name</label>
            <select type="text" id="inputStudioID" class="form-select" name="inputStudioID" required>
                <option value="" selected hidden>Select...</option>
                    {% for studio in studios%}
                    <option value="{{ studio['studioID'] }}">{{studio['studioName']}}</option>
                    {% endfor %}
